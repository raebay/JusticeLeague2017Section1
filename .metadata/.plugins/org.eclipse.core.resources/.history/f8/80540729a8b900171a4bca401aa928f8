	public Room()
	{
		
	}
	public Room(String rID, String rName, String rDescription, Item rItems, Monster rMonsters, Puzzle rPuzzles)
	{
		this.rID = rID;
		this.rName = rName;
		this.rDescription = rDescription;
		this.rItems = rItems;
		this.rMonsters = rMonsters;
		this.rPuzzles = rPuzzles;
	}

	public String getrID() 
