import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.StackPane;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class GUI extends Application
{

	Stage window; 
	Scene lowestPart, lowerDeck, middleDeck, upperDeck, bridge;
	
	public static void main(String[] args)
	{
		launch(args); 

	}

	@Override
	public void start(Stage primaryStage) throws Exception 
	{
		window = primaryStage; 
		
		Label lable1 = new Label("hey sexy"); 
		Button button1 = new Button("Go to next scene"); 
		button1.setOnAction(e -> window.setScene(lowerDeck));
		
		//Layout 1- children laid out in vBox
		VBox layout1 = new VBox(50); 
		layout1.getChildren().addAll(lable1, button1); 
		lowestPart = new Scene(layout1, 500,500); 
		
		//button 2
		Button button2 = new Button("Go to next scene");
		button2.setOnAction(e -> window.setScene(middleDeck));
		
		//Layout2
		StackPane layout2 = new StackPane(); 
		layout2.getChildren().add(button2); 
		lowerDeck = new Scene(layout2, 500,500); 
		
		//button 3
		Button button3 = new Button("Go back to scene 1"); 
		button3.setOnAction(e -> window.setScene(upperDeck));
		
		//Layout3
		StackPane layout3 = new StackPane(); 
		layout3.getChildren().add(button3); 
		upperDeck = new Scene(layout3, 500,500); 
		
		window.setScene(lowestPart);
		window.setTitle("My boxxx"); 
		window.show(); 
	}
	
	
	

}
